@model EMARTPROJECT.Models.SellerCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SellerCreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="s_username" class="control-label"></label>
                <input asp-for="s_username" class="form-control" />
                <span asp-validation-for="s_username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="s_pwd" class="control-label"></label>
                <input asp-for="s_pwd" class="form-control" />
                <span asp-validation-for="s_pwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GSTIN" class="control-label"></label>
                <input asp-for="GSTIN" class="form-control" />
                <span asp-validation-for="GSTIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="s_email_id" class="control-label"></label>
                <input asp-for="s_email_id" class="form-control" />
                <span asp-validation-for="s_email_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sbank_accno" class="control-label"></label>
                <input asp-for="sbank_accno" class="form-control" />
                <span asp-validation-for="sbank_accno" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="photopath" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="photopath" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @section Scripts {
                <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


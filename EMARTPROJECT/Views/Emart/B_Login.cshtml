@model EMARTPROJECT.Models.Buyer

@{
    ViewData["Title"] = "B_Login";
}

<h1>B_Login</h1>

<h4>Buyer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="B_Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="b_id" class="control-label"></label>
                <input asp-for="b_id" class="form-control" />
                <span asp-validation-for="b_id" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="b_pwd" class="control-label"></label>
                <input asp-for="b_pwd" class="form-control" />
                <span asp-validation-for="b_pwd" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <div>
            @ViewBag.message
        </div>
    </div>
</div>

<div>
    <a asp-action="B_SignUp">Sign up for new user</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
